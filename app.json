{
  "name": "dwatson-pharmacy",
  "description": "D.Watson Pharmacy Sales Dashboard - Complete Management System",
  "repository": "https://github.com/Itxxwasi/DWATSON-DB",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "MONGODB_URI": {
      "description": "MongoDB connection string (mongodb:// or mongodb+srv://)",
      "value": ""
    },
    "JWT_SECRET": {
      "description": "Secret key for JWT token encryption (use strong random string)",
      "value": ""
    },
    "ADMIN_PASSWORD": {
      "description": "Admin password for user promotions",
      "value": "admin123"
    },
    "NODE_ENV": {
      "description": "Environment (production or development)",
      "value": "production"
    },
    "PORT": {
      "description": "Server port",
      "value": "5000"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "scripts": {
    "postdeploy": "echo 'âœ… D.Watson Pharmacy Dashboard deployed successfully!'"
  }
}
